<Window x:Class="Proiect3.RegularUserMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Regular User MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Welcome Message -->
        <Label x:Name="lblWelcome"
               Content="Welcome, Prenume!"
               FontSize="18"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,10,0,0" />

        <!-- Top Buttons -->
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,50,0,0">
            <Button Content="My Appointments"
                    Width="150"
                    Height="30"
                    Click="ProgramarileMeleButton_Click" />
            <Button Content="Change Password"
                    Width="150"
                    Height="30"
                    Margin="0,10,0,0"
                    Click="ChangePasswordButton_Click" />
            <Button Content="Logout"
                    Width="150"
                    Height="30"
                    Margin="0,10,0,0"
                    Click="LogoutButton_Click" />
        </StackPanel>
    </Grid>
</Window>
