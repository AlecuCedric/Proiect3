<Window x:Class="Proiect3.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <!-- Username -->
            <TextBlock Text="Username" />
            <TextBox x:Name="txtUsername" Width="200" Margin="0,5" IsReadOnly="True" />

            <!-- Current Password -->
            <TextBlock Text="Current Password" Margin="10,10,0,0" />
            <PasswordBox x:Name="txtCurrentPassword" Width="200" Margin="0,5" />

            <!-- New Password -->
            <TextBlock Text="New Password" Margin="10,10,0,0" />
            <PasswordBox x:Name="txtNewPassword" Width="200" Margin="0,5" />

            <!-- Confirm New Password -->
            <TextBlock Text="Confirm New Password" Margin="10,10,0,0" />
            <PasswordBox x:Name="txtConfirmPassword" Width="200" Margin="0,5" />

            <!-- Change Password Button -->
            <Button Content="Change Password" Width="200" Height="30" Margin="0,20,0,0" Click="ChangePasswordButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
