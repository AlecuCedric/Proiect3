<Window x:Class="Proiect3.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" Height="350" Width="400">
    <Grid>
        <!-- Username Label and TextBox -->
        <TextBlock Text="Username:" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="txtUsername" IsReadOnly="True" VerticalAlignment="Top" Margin="10,30,10,0"/>

        <!-- Current Password -->
        <TextBlock Text="Current Password:" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <PasswordBox Name="txtCurrentPassword" VerticalAlignment="Top" Margin="10,90,10,0"/>

        <!-- New Password -->
        <TextBlock Text="New Password:" VerticalAlignment="Top" Margin="10,130,0,0"/>
        <PasswordBox Name="txtNewPassword" VerticalAlignment="Top" Margin="10,150,10,0"/>

        <!-- Confirm Password -->
        <TextBlock Text="Confirm Password:" VerticalAlignment="Top" Margin="10,190,0,0"/>
        <PasswordBox Name="txtConfirmPassword" VerticalAlignment="Top" Margin="10,210,10,0"/>

        <!-- Buttons -->
        <Button Content="Change Password" Click="ChangePasswordButton_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Width="150"/>
        <Button Content="Cancel" Click="CancelButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="150"/>
    </Grid>
</Window>
