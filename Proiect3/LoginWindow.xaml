<Window x:Class="Proiect3.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <Label Content="Welcome to P3!" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <TextBlock Text="Username:" Margin="36,105,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" Width="200" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0"/>
        <TextBlock Text="Password:" Margin="40,165,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" Width="200" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,160,0,0"/>
        <Button Content="Login" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30" Click="LoginButton_Click"/>
    </Grid>
</Window>
