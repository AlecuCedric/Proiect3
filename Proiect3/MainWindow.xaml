<Window x:Class="Proiect3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Welcome Message -->
        <Label x:Name="lblWelcome" Content="Welcome, Prenume!" FontSize="18" FontWeight="Bold"
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" />

        <!-- Top Buttons -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
            <Button Content="My appointments" Width="150" Height="30" Click="ProgramarileMeleButton_Click" />
            <Button Content="Change Password" Width="150" Height="30" Margin="0,10,0,0" Click="ChangePasswordButton_Click" />
            <Button Content="Logout" Width="150" Height="30" Margin="0,10,0,0" Click="LogoutButton_Click" />
        </StackPanel>

        <!-- Admin Panel -->
        <GroupBox HorizontalAlignment="Center" VerticalAlignment="Top" Width="300" Height="250" Margin="0,180,0,0">
            <!-- Admin Panel Header -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                <!-- Admin Buttons -->
                <Label Content="Admin Panel" FontSize="18" FontWeight="Bold" Width="119" />
                <!-- Admin Buttons -->
                <Button Content="Medic Form" Width="200" Height="30" Click="MedicForm_Click" Margin="0,10,0,0" />
                <Button Content="Pacient Form" Width="200" Height="30" Margin="0,10,0,0" Click="PacientForm_Click" />
                <Button Content="Medicamente Form" Width="200" Height="30" Margin="0,10,0,0" Click="Medicamente_Click" />
                <Button Content="Consultatie Form" Width="200" Height="30" Margin="0,10,0,0" Click="Consultatie_Click" />
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
